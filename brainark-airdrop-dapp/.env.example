# BrainArk Airdrop DApp Example Environment Variables
# This file should be committed to version control.
# Copy this file to .env.local and fill in the values for your local development environment.

# Wallet Connect Project ID - Get one from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# Telegram Bot API Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Twitter OAuth Credentials
# Get these from your Twitter Developer Portal application
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Optional if using OAuth 1.0a (not required for OAuth 2 login flow)
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Twitter Bearer Token (for API v2) - Get this from the Twitter Developer Portal
TWITTER_BEARER_TOKEN=

# Callback URL for Twitter OAuth
TWITTER_CALLBACK_URL=http://localhost:3000/api/auth/callback/twitter

# Firebase Configuration (optional, for user data storage)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Network Configuration
NEXT_PUBLIC_NETWORK_ENV=development
NEXT_PUBLIC_RPC_URL=https://rpc.brainark.online
NEXT_PUBLIC_CHAIN_ID=424242

# Contract Addresses (These are public and can be shared)
NEXT_PUBLIC_AIRDROP_CONTRACT=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512
NEXT_PUBLIC_EPO_CONTRACT=0x5FbDB2315678afecb367f032d93F642f64180aa3
NEXT_PUBLIC_FUNDING_WALLET=0xC7A3e128f909153442D931BA430AC9aA55E9370D

# Security - Generate a secret using `openssl rand -hex 32`
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Development Mode - Disable problematic features
NEXT_PUBLIC_DISABLE_WALLETCONNECT=false

# DEPLOYMENT PRIVATE KEY - FOR LOCAL DEVELOPMENT/TESTING ONLY
# Use a private key from a development wallet (e.g., from Hardhat or Anvil)
PRIVATE_KEY=

